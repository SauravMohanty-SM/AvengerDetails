<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/search_bar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/HeroSearch"
            android:layout_width="255dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/avenger_search_bar"
            android:hint="Search Your Hero"
            android:textColorHint="#718093"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            tools:ignore="MissingConstraints,RtlCompat"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="318dp"
            android:paddingLeft="25dp"/>


        <ImageView
            android:id="@+id/search_image"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:src="@drawable/search_button_image"
            android:background="@drawable/search_button"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>